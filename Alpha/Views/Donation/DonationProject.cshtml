@model Alpha.Models.UnitDonation
@{ Layout = "_Layout";
    ViewBag.Title = "Donation"; }
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
</head>
@using (Html.BeginForm("CreateUnitDonation", "Donation", FormMethod.Post, new { @class = "form", name = "titre", style = "margin-top: 100px;" }))
{
    <div id="Donation">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-6 cadre">
                <button class="btn boutondusite" style="border:solid 2px #1D617A;width:20%; margin-right:90%;">Revenir sur<br />le projet</button>
                <div class="titres1">Faire un don</div><br>
                Montant: @Html.TextBoxFor(m => m.Amount, new
       {
           type = "number",
           style = "width:20%; margin:1% 40%; height:40px; text-align:center; font-size:35px;",
           value = "",
           id = "total",
           name = "total",
       })
            <table style="max-height:15px; margin-left:20%; margin-right:20%; width:60%;">
                <tr>
                    <td class="boutondusite" style="border:solid 2px #1D617A;width:10%; margin-left:3%" onClick="document.titre.total.value=10">10 €</td>
                    <td style="width:1%"></td>
                    <td class="boutondusite" style="border:solid 2px #1D617A;width:10%; margin-left:3%" onClick="document.titre.total.value=30">30 €</td>
                    <td style="width:1%"></td>
                    <td class="boutondusite" style="border:solid 2px #1D617A;width:10%; margin-left:3%" onClick="document.titre.total.value=60">60 €</td>
                    <td style="width:1%"></td>
                    <td class="boutondusite" style="border:solid 2px #1D617A;width:10%; margin-left:3%" onClick="document.titre.total.value=100">100 €</td>
                </tr>
            </table>
                <br>
            </div>
            <div class=col-1></div>
            <div class="col-3 cadre" style="padding:2%;">
                <div class="titres1" style="font-size:2em;">Faire un don</div><br>
                <img src="~/img/carte bleue.png" style="height:30px" />
                <img src="~/img/Paypal.png" style="size:200%; height:30px; padding-left: 5%;" />
                <br><br>
                <button class="btn boutondusite btn-xl" type="submit" style="border:solid 2px #1D617A;width:100%; float:left">Donner !</button>
            </div>
            <div class="col-1"></div>
        </div>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-6 cadre" style="margin-top:2%; margin-bottom:-1%">
                <div class="titres1" style="font-size:1.5em;">Choisissez une contrepartie symbolique pour un montant minimum !</div>
            </div>
            <div class="col-5"></div>
        </div>
        <!--For each Compensation-->
        <div class="row">
            <div class="col-1"></div>
            <div class="col-6 cadre" style="margin-top:2%; padding:1%;" onClick="document.titre.total.value=parseInt(document.titre.total.value)+40">
                <img src="~/img/phone.jpg" style="width:100px; float:left;" />
                <div class="titres1" style="font-size:1.5em;">Un T-Shirt dédicacé</div>
                <div class="titres1" style="font-size:1.5em; float:right;">40€</div>
                <br>
                <div style="float-left; text-align:left;">
                    Ce T-Shirt a été fabriqué par des petits enfants heureux que vous contribuiiez à la rénovation de leur école.
                </div>
            </div>
            <div class="col-5"></div>
        </div>
        <input type="hidden" name="collectId" value="@ViewBag.collectId" />
    </div>}
