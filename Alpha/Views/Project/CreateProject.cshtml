@model Alpha.Models.Project
@{
    Layout = null;
}
<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Creer ton projet</h2>
<!-- Icon Divider-->
<div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
    <div class="divider-custom-line"></div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
        @using (Html.BeginForm())
        {
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.ProjectName, new { @class = "form-control", placeholder = "Nom du projet" })
                @Html.LabelFor(model => model.ProjectName)
                @Html.ValidationMessageFor(model => model.ProjectName)
            </div>
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", placeholder = "date" })
                @Html.LabelFor(model => model.StartDate)
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
            <!-- Submit Button-->
            <button class="btn btn-primary btn-xl" type="submit">Cree</button>
        }
    </div>
</div>